@model ShareWeb.UI.Models.RequestModel.User
<div class="col-lg-11">
    <div class="row">
        <div class="col-lg-12">
            <div class="col-lg-4">
                <div class="user-image" style="max-height:210px;">
                    <img src='@Model.profilepicurl' class="img-responsive thumbnail" style="height:210px">
                </div>
            </div>
            <div class="col-lg-8">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label>First name</label>
                            <input class="form-control" value='@Model.fname'>
                        </div>
                    </div>

                    <div class="col-lg-6">
                        <div class="form-group">
                            <label>Last name</label>
                            <input class="form-control" value='@Model.lname'>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label>Email</label>
                            <input class="form-control" value='@Model.emailId'>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label>Mobile</label>
                            <input class="form-control" value='@Model.mobile'>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class=row">
        <div class="col-lg-12">
            <div class="form-group">
                <label>Address</label>
                <input class="form-control" placeholder="Address Line 1" style="margin-bottom:15px" value='@Model.add1'>
                <input class="form-control" placeholder="Address Line 2" style="margin-bottom:15px" value='@Model.add2'>
                <input class="form-control" placeholder="Address Line 3" value='@Model.add3'>
            </div>
        </div>
    </div>
    <div class=row">
        <div class="col-lg-4">
            <div class="form-group">
                <label>City</label>
                <input class="form-control" value='@Model.city'>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="form-group">
                <label>State</label>
                <input class="form-control" value='@Model.state'>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="form-group">
                <label>Pin</label>
                <input class="form-control" value='@Model.pin'>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-4"></div>
        <div class="col-lg-4">
            <div class="col-lg-12">
                <button type="button" class="btn btn-primary btn-lg btn-block" style="margin-bottom:20px">Save</button>
            </div>
        </div>
        <div class="col-lg-4"></div>
    </div>
</div>